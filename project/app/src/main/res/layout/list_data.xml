<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/search_bar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <ImageView
            android:src="@drawable/chepter1ex1"
            android:id="@+id/imagetxt"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            style="@style/Divider.HorizontalRed"
            android:layout_marginTop="@dimen/margin_line_top"
            android:layout_marginRight="@dimen/margin_space_left_subject"
            />
        <TextView
            android:id="@+id/tvlinkPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v7.widget.CardView>